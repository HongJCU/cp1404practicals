BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            multiline: False
            on_text_validate: app.handle_calculate()
            font_size: 48

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25

            Button:
                text: 'Up'
                font_size: 48
                on_press:
                    app.handle_increment(1)
                    app.handle_calculate()

            Button:
                text: 'Down'
                font_size: 48
                on_press:
                    app.handle_increment(-1)
                    app.handle_calculate()

    Button:
        text: 'Convert miles to km'
        font_size: 48
        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)
