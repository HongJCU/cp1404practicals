BoxLayout:
    orientation: 'vertical'  # Outer box for vertical arrangement of top and bottom sections
    BoxLayout:
        orientation: 'horizontal' # Inner box for horizontal arrangement of TextInput and Button
        TextInput:
            id: input_number
            text: '7'
            font_size: 30
            multiline: False
        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)
        Label:
            text:
            id: output_label
            font_size: 30
            color: (1.0, 0.753, 0.796, 1.0)


    Label: # New Label positioned at the bottom by the outer BoxLayout
        text: 'Enter a number and press square'
        font_size: 16
        height: 50
        halign: 'center'
        valign: 'middle'
        text_size: self.size
